style.
  .sd-codeblock code {
    display: block;
    padding: 0.5rem;
    margin-bottom: 1rem;
  }

  h6 {
    font-weight: bold;
  }

article.column.row
  h1= title
  if description
    p= description
  != body
  each data, name in docs
    h2= name
    != spacedoc(name)
