include ./item.pug

//- Render a collection of doclets.
//- @param {Object[]} items - Doclets.
mixin section(parent)
  - let categories = ['class', 'constant', 'event', 'function', 'module', 'namespace', 'typedef']

  each cat in categories
    - let predicate = parent ? { kind: cat, memberof: parent } : i => !i.memberof && i.kind === cat
    each itm in find(predicate)
      +item(itm, parent ? true : false)
