include ./types.pug
include ./sample.pug
include ./deprecated.pug
include ./description.pug
include ./returns.pug
include ./throws.pug
include ./parameters.pug

//- Render a doclet.
//- @param {Object} item - Doclet.
//- @param {Number} level - Heading level.
mixin item(item, sub)
  section.sd-doclet
    #{sub ? 'h4' : 'h3'} #{item.kind}: #{item.name}

    +types(item.type)
    +sample(item)
    +deprecated(item.deprecated)
    +description(item)
    +returns(item.returns)
    +throws(item.exceptions)
    +parameters(item.params)
    +parameters(item.properties)
    +section(item.longname)
