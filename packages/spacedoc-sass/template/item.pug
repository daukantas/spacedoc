include ./deprecated.pug
include ./parameters.pug
include ./properties.pug
include ./returns.pug
include ./throw.pug
include ./outputs.pug
include ./examples.pug
include ./changelog.pug

mixin item(item)
  section.sd-doclet
    h3 #{item.context.type}: #{item.context.name}
    if item.type
      p <strong>Type:</strong> #{helpers.type(item.type)}
    +code(helpers.sample(item))
    +deprecated(item.deprecated)
    != helpers.markdown(item.description)
    +parameters(item.parameter)
    +properties(item.property)
    +returns(item.return)
    +throws(item.throw)
    +outputs(item.output)
    +examples(item.example)
    +changelog(item.since)
