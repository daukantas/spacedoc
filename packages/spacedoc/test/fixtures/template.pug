h1= page.title
.lead= page.description

!= page.body

hr

if page.docs.sass
  section
    h2 Using Sass
    if page.docs.sass.variable
      section
        h3 Variables
        table
          tr
            th Name
            th Type
            th Default Value
            th Description
          each variable in page.docs.sass.variable
            tr
              td: code $#{variable.context.name}
              td= variable.type
              td: code= variable.context.value
              td= variable.description

    hr

    if page.docs.sass.mixin
      section
        h3 Mixins
        each mixin in page.docs.sass.mixin
          section
            h4= mixin.context.name
            p= mixin.description
            if mixin.parameter
              table
                tr
                  th Name
                  th Type
                  th Default Value
                  th Description
                each param in mixin.parameter
                  tr
                    td: code $#{param.name}
                    td= param.type
                    td: code= param.default
                    td= param.description

    hr

    if page.docs.sass.mixin
      section
        h3 Mixins
        each mixin in page.docs.sass.mixin
          section
            h4= mixin.context.name
