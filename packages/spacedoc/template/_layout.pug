doctype html

head
  title #{page.title} | #{site.title}

  link(rel='stylesheet', href='https://cdn.jsdelivr.net/foundation/6.2.1/foundation.min.css')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.7.0/styles/atom-one-dark.min.css')

  //- @todo Move this into its own CSS or Sass file.
  style.
    body {
      background: #f9f9f9;
      font-size: 18px;
      font-family: Soleil, Helvetica, sans-serif;
      color: #333;
    }

    .top-bar {
      margin-bottom: 2rem;
    }

    .top-bar,
    .top-bar ul {
      background: #333;
    }

    .top-bar .menu-text, .top-bar .menu a {
      color: #fff;
      padding: 0.8rem 1rem 0.6rem 1rem;
    }

    .sd-doclet {
      margin-bottom: 2rem;
      border-bottom: 1px solid #ccc;
      padding-bottom: 1rem;
    }

    .sd-doclet .sd-doclet {
      padding-left: 1.5rem;
      border-left: 1px solid #ccc;
    }

    .sd-codeblock code,
    pre > code {
      display: block;
      padding: 1.5rem;
      margin-bottom: 1rem;
      background: #333;
      color: #fff;
    }

    .sd-nav {
      font-size: 16px;
    }

    .sd-nav .menu-item a, .sd-nav .menu-text {
      padding: 0;
      line-height: 34px;
    }

    .sd-nav .menu-item a {
      color: #333;
    }

    .sd-nav .menu-item a:hover {
      color: #810606;
    }

    .sd-nav .menu-text {
      color: #999;
      font-weight: bold;
      text-transform: uppercase;
    }

    h1, h2, h3, h4, h5, h6 {
      font-family: Soleil, Helvetica, sans-serif;
      text-transform: lowercase;
      color: #333;
    }

    h1 {
      font-size: 60px;
    }

    h2 {
      font-size: 40px;
    }

    h3 {
      font-size: 28px;
    }

    h4 {
      font-size: 22px;
    }

    h5 {
      font-size: 20px;
    }

    h6 {
      font-size: 18px;
      font-weight: bold;
    }

    code {
      font-family: 'Space Mono', monospace;
      padding: 0;
      border: 0;
      background: transparent;
    }

    .lead {
      font-size: 25px;
    }

    table {
      font-size: 16px;
    }

    table thead {
      background: transparent;
      border-bottom: 2px solid #333;
    }

    tr {
      background: transparent !important;
    }

    table tbody {
      background: transparent;
    }

    table tbody td {
      line-height: 1.6;
      padding-top: 0.7rem;
    }

    tbody tr {
      border-bottom: 1px solid #333;
    }

    td p {
      margin-bottom: 0;
    }

    .callout {
      border: 0;
      border-left: 10px solid rgba(0, 0, 0, 0.3);
    }

header.top-bar
  .column.row
    .top-bar-left
      ul.menu
        li.menu-text= site.title
        each title, url in site.nav
          li.menu-item: a(href=url)= title

block body
