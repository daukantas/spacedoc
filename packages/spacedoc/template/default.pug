//- This is the default layout, for pages that display documentation data.

extends ./_layout.pug
include ./partials/list.pug

block body
  .row
    .medium-8.medium-push-4.columns
      article.column.row
        header
          h1= page.title
          if page.description
            p.lead= page.description
        hr
        != page.body
        hr
        if page.docs.sass
          h2 Sass Reference
          +list(page.docs.sass, 'sass', spacedoc.adapters.sass.order)
        if page.docs.js
          h2 JavaScript Reference
          +list(page.docs.js, 'js', spacedoc.adapters.js.order)
        if page.docs.json
          h2 JSON Reference
          +list(page.docs.json, 'json', spacedoc.adapters.json.order)
    .medium-4.medium-pull-8.columns
      include ./partials/nav.pug
