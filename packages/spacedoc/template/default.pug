//- This is the default layout, for pages that display documentation data.

extends ./_layout.pug
include ./partials/list.pug

block body
  .row
    .medium-8.medium-push-4.columns
      article.column.row
        header
          h1= page.title
          if page.description
            p.lead= page.description
        hr
        != page.body
        hr
        if page.docs.sass
          h2 Sass Reference
          +list('sass')
        if page.docs.js
          h2 JavaScript Reference
          +list('js')
        if page.docs.json
          h2 JSON Reference
          +list('json')
    .medium-4.medium-pull-8.columns
      include ./partials/nav.pug
