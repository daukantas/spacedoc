//- This is the default layout, for pages that display documentation data.

extends ./_layout.pug
include ./partials/list.pug

block body
  .row
    .medium-8.medium-push-4.columns
      article.column.row
        header
          h1= title
          if description
            p.lead= description
        hr
        != body
        hr
        if docs.sass
          h2 Sass Reference
          +list(docs.sass, 'sass', categories.sass)
        if docs.js
          h2 JavaScript Reference
          +list(docs.js, 'js', categories.js)
        if docs.json
          h2 JSON Reference
          +list(docs.json, 'json', categories.json)
    .medium-4.medium-pull-8.columns
      include ./partials/nav.pug
