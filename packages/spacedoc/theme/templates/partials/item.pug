include ./title.pug
include ./types.pug
include ./deprecated.pug
include ./parameters.pug
include ./properties.pug
include ./returns.pug
include ./throw.pug
include ./outputs.pug
include ./examples.pug
include ./changelog.pug

//- Render the contents of a single doclet.
//- @param {Object} item - Doclet.
//- @param {?Boolean} sub - If doclet is nested inside of another doclet. This changes the heading tag used for the doclet title.
mixin item(item, sub)
  section.sd-doclet
    +title(item, sub)
    +types(item.types)
    if item.preview
      +code(item.preview.code, item.preview.language)
    +deprecated(item.deprecated)
    != spacedoc.markdown(item.meta.description)
    +parameters(item.parameters)
    +properties(item.properties)
    +returns(item.returns)
    +throws(item.throws)
    +outputs(item.outputs)
    +examples(item.examples)
    +changelog(item.changelog)
    if block
      block
